{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: #000 url(../images/services/bg_services.jpg);
            background-size: cover;
            background-repeat: no-repeat;
        }
        h1 {color: #FFF;font-weight: bold;}
        label {color: #FFF;}
        .form-control {
            width: 60%;
            margin: auto;
        }
        .btn {font-weight: bold;}
    </style>
{% endblock %}

{% block body %}

    <div class="row" style="margin: 150px auto;">
        <div class="col-sm-8 col-sm-offset-2 text-center">
            <h1>Inscription</h1>
            {{ form_start(formRegister, {
                'Attr': {'class': 'form-signin'}
            }) }}
            {{ form_row(formRegister.username, {'label': 'Nom d\'utilisateur *', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
            {{ form_row(formRegister.email, {'label': 'Adresse email *', 'attr': {'placeholder': 'email'}}) }}
            {{ form_row(formRegister.plainPassword.first, {'label': 'Mot de passe *', 'attr': {'placeholder': 'Mot de passe'}}) }}
            {{ form_row(formRegister.plainPassword.second, {'label': 'Confirmez votre mot de passe *', 'attr': {'placeholder': 'Confirmez votre mot de passe'}}) }}
            {{ form_row(formRegister.mode, {'label': 'Vous êtes.. *'}) }}
            {{ form_row(formRegister.termsAccepted, {'label': 'J\'ai lu et j\'accepte les Conditions Générales d\'Utilisation'}) }}
            <button type="submit" class="btn btn-success">S'inscrire</button>
            {{ form_end(formRegister) }}
        </div>
    </div>

{% endblock %}